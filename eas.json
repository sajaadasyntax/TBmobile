{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "npmInstallArgs": ["--legacy-peer-deps"],
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "npmInstallArgs": ["--legacy-peer-deps"],
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "npmInstallArgs": ["--legacy-peer-deps"],
      "android": {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-services.json"
      },
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-asc-app-id",
        "appleTeamId": "your-apple-team-id"
      }
    }
  }
}

